<%= form_for @task do |f| %>
  <%= f.label "Title:" %>
  <%= f.text_field :title %><br>
  
  <%= f.label "Details:" %>
  <%= f.text_area :details %><br>
  
  <% if request.path.include?("edit") %>
    <%= f.label "Completed?" %>
    <%= f.check_box :completed %><br>
  <% end %>

  <%= f.submit %><br>
<% end %>