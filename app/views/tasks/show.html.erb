<div id="background-img" class="background-img" >
  <div class="card-container">
    <div class="card text-center">
      <div class="card-body">
        <h5 class="card-title"><%= @task.title %></h5>
        <p class="card-text"><%= @task.details %></p>
        <p class="checkbox">Completed?<%= link_to check_box_tag(:task, :completed, @task.completed), 
                        "/tasks/#{@task.id}/complete/#{!@task.completed}" %>
        </p>
        <div class="button d-flex justify-content-center">
          <%= link_to "Edit", edit_task_path(@task), class:"button-40" %><br>
          <%= link_to "Delete", task_path(@task), class:"button-40", method: :delete %><br>
          <%= link_to "Back", tasks_path, class:"button-40" %>
        </div>
      </div>
      <div class="card-footer text-muted"><%= @task.created_at %></div>
      </div>
  </div>

</div>