<div class="card text-center">
  <div class="card-body">
    <h5 class="card-title"><%= @task.title %></h5>
    <p class="card-text"><%= @task.details %></p>
    <p>Completed?<%= link_to check_box_tag(:task, :completed, @task.completed), 
                    "/tasks/#{@task.id}/complete/#{!@task.completed}" %>
    </p>
    <div class="button d-flex justify-content-center">
      <%= link_to "Edit", edit_task_path(@task), class:"btn btn-primary" %><br>
      <%= link_to "Delete", task_path(@task), class:"btn btn-primary", method: :delete %><br>
      <%= link_to "Back", tasks_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="card-footer text-muted">2 days ago</div>
</div>