<h1>Tasks#index</h1>
<p>Tasks go here:</p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <p><strong><%= task.title %></strong></p>
      <p><%= task.details %></p>
      <%= link_to "Show", task_path(task) %>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to "Delete", task_path(task), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "New Task", new_task_path %>